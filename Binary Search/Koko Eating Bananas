#include <bits/stdc++.h>
#include <iostream>
#include <utility>
using namespace std;

int FindMaxElem(vector <int> &arr){
    int n = arr.size();
    int maxi = INT_MIN;

    for(int i = 0; i<n; i++){
        maxi = max(maxi,arr[i]);
    }

    return maxi;
}


int CalculateTotalHours(vector <int> &arr, int bananas){
    int n = arr.size();
    int total = 0;
    for(int i = 0; i<n; i++){
        total += ceil((double)arr[i]/ (double) bananas);
    }

    return total;
}


int MinimumRateToEatBanana(vector <int> &arr, int hour){
    int low = 1;
    int high = FindMaxElem(arr);
    int ans = -1;
    

    while(low <= high){
        int mid = low+ (high - low)/2;

        int totalH = CalculateTotalHours(arr, mid);

    
        if(totalH <= hour){
            ans = mid;
            high = mid-1;
        }
        else{
            low = mid+1;
        }
        
    }

    return ans;

}
