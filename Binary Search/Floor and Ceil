#include <bits/stdc++.h>
using namespace std;

pair<int, int> FloorCeil(vector<int> &arr, int x) {
    int n = arr.size();
    int low = 0, high = n - 1;
    int floorVal = -1, ceilVal = -1;

    while (low <= high) {
        int mid = (low + high) / 2;

        if (arr[mid] == x) {
            floorVal = ceilVal = arr[mid];
            break;
        }
        else if (arr[mid] < x) {
            floorVal = arr[mid];
            low = mid + 1;
        }
        else {
            ceilVal = arr[mid];
            high = mid - 1;
        }
    }

    return {floorVal, ceilVal};
}
