#include <bits/stdc++.h>
using namespace std;

int main() {
    int n, k;
    cin >> n >> k;
    vector<int> a(n);
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    int index = a[k - 1];  
    int count = 0;
    for (int mark : a) {
        if (mark >= index && mark > 0) {
            count++;
        }
    }
    cout << count << "\n";
    return 0;
}
