#include <bits/stdc++.h>
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;


vector <int> NextPermutation(vector <int>&arr){
    int n = arr.size();
    int indx = -1;

    for(int i = n-2; i>=0; i--){
        if(arr[i]< arr[i+1]){
            indx = i;
            break;
        }

       if(indx == -1){
        reverse(arr.begin(), arr.end());
        return arr;
       }
    }

    for(int i = n-1; i>= indx; i--){
        if(arr[i] > arr[indx]){
            swap(arr[i], arr[indx]);
            break;
        }
    }

    reverse(arr.begin() + indx + 1, arr.end());
    return arr;
}

int main(){

    int n;
    cout<<"Enter size: ";
    cin>>n;
    
    cout<<"Enter the array: ";
    vector<int> arr(n);
    for (int i = 0; i< n; i++){
         cin>>arr[i];
    }

    vector <int> arr2(n);
    arr2 = NextPermutation(arr);

    

    cout<<"The next Permutation is: ";
    for(int i = 0; i<n; i++){

        cout<<arr2[i]<<" ";
    }
    
    return 0;
}
